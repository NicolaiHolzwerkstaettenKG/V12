<odoo>

  <record id="view_move_line_form_inherit_ecofi" model="ir.ui.view">
    <field name="name">account.move.line.form.inherit.datev_steuer</field>
    <field name="model">account.move.line</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="account.view_move_line_form"/>
    <field name="arch" type="xml">
      <field name="quantity" position="after">
        <field name="datev_export_value" invisible="1"/>
      </field>
      <field name="ecofi_tax_id" position="before">
        <field name="ecofi_account_counterpart" />
      </field>
    </field>
  </record>

  <record id="view_move_line_tree_inherit_ecofi" model="ir.ui.view">
    <field name="name">view.move.line.tree.inherit.ecofi</field>
    <field name="model">account.move.line</field>
    <field name="type">tree</field>
    <field name="inherit_id" ref="account.view_move_line_tree"/>
    <field name="arch" type="xml">
      <field name="ecofi_tax_id" position="before">
        <field name="ecofi_account_counterpart" />
      </field>
    </field>
  </record>
</odoo>
