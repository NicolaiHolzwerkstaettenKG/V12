<odoo>

  <record id="view_move_form_inherit_ecofi" model="ir.ui.view">
    <field name="name">account.move.form.inherit.ecofi</field>
    <field name="model">account.move</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="after">
        <field name="visible_account_counterpart" invisible="True"/>
      </xpath>
      <xpath expr="//field[@name='line_ids']//field[@name='name']" position="after">
        <field name="ecofi_account_counterpart" attrs="{'column_invisible':[('parent.visible_account_counterpart','=' ,False)]}" />
      </xpath>
    </field>
  </record>
</odoo>
